{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
		"check:exports": {
			"dependsOn": ["build"],
			"outputs": []
		},
		"type-check": {
			"dependsOn": ["^build"],
			"outputs": [],
			"inputs": ["src/**", "tests/**", "tsconfig.json"]
		},
		"test": {
			"dependsOn": ["^build"],
			"outputs": ["coverage/**"],
			"inputs": ["src/**", "tests/**"]
		},
		"test:unit": {
			"dependsOn": ["^build"],
			"outputs": ["coverage/**"],
			"inputs": ["src/**", "tests/**"]
		},
		"test:integration": {
			"dependsOn": ["^build"],
			"outputs": ["coverage/**"],
			"inputs": ["src/**", "tests/**"]
		},
		"test:dev": {
			"cache": false,
			"persistent": true,
			"inputs": ["src/**", "tests/**"]
		},

		"lint": {
			"outputs": []
		},
		"clean": {
			"cache": false
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"preview": {
			"cache": false,
			"persistent": true
		}
	}
}
