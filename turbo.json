{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
		"test": {
			"outputs": ["coverage/**"],
			"inputs": ["src/**", "tests/**"]
		},
		"test:dev": {
			"cache": false,
			"persistent": true,
			"inputs": ["src/**", "tests/**"]
		},
		"@monque/tsed#test": {
			"dependsOn": ["^build"],
			"outputs": ["coverage/**"],
			"inputs": ["src/**", "tests/**"]
		},
		"lint": {
			"outputs": []
		},
		"dev": {
			"cache": false,
			"persistent": true
		}
	}
}
