{
	"name": "@monque/tsed",
	"version": "0.0.0",
	"description": "Ts.ED framework integration for @monque/core with decorators and DI support",
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.mts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.mts",
				"default": "./dist/index.mjs"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsdown",
		"check:exports": "publint && attw --pack .",
		"clean": "rimraf dist coverage .turbo",
		"type-check": "tsc --noEmit",
		"pretest": "bun run type-check",
		"test": "vitest run",
		"test:dev": "TESTCONTAINERS_REUSE_ENABLE=true vitest",
		"test:watch": "vitest",
		"lint": "biome check src/"
	},
	"keywords": [
		"tsed",
		"job",
		"queue",
		"scheduler",
		"mongodb",
		"decorator"
	],
	"license": "MIT",
	"dependencies": {
		"@monque/core": "workspace:*"
	},
	"devDependencies": {
		"@total-typescript/ts-reset": "^0.6.1",
		"@types/bun": "^1.3.5",
		"tsdown": "^0.18.1",
		"typescript": "^5.7.3"
	},
	"peerDependencies": {
		"@tsed/common": "^8.0.0",
		"@tsed/di": "^8.0.0"
	}
}
