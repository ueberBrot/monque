{
	"name": "@monque/core",
	"version": "0.0.0",
	"description": "MongoDB-backed job scheduler with atomic locking, exponential backoff, and cron scheduling",
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.mts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.mts",
				"default": "./dist/index.mjs"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsdown",
		"test": "vitest run",
		"test:watch": "vitest",
		"lint": "biome check src/"
	},
	"keywords": [
		"job",
		"queue",
		"scheduler",
		"mongodb",
		"cron",
		"background-jobs"
	],
	"license": "MIT",
	"dependencies": {
		"cron-parser": "^5.4.0",
		"mongodb": "^7.0.0"
	},
	"devDependencies": {
		"@faker-js/faker": "^10.1.0",
		"@testcontainers/mongodb": "^11.10.0",
		"@types/bun": "^1.3.4",
		"fishery": "^2.4.0",
		"tsdown": "^0.18.0"
	},
	"peerDependencies": {
		"typescript": "^5"
	}
}
