{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended",
		":dependencyDashboard",
		":rebaseStalePrs",
		":semanticCommitsDisabled",
		"group:monorepos",
		"helpers:pinGitHubActionDigests"
	],
	"enabledManagers": ["bun", "github-actions"],
	"timezone": "Europe/Brussels",
	"labels": ["dependencies"],
	"rangeStrategy": "bump",
	"prConcurrentLimit": 4,
	"prHourlyLimit": 2,
	"lockFileMaintenance": {
		"enabled": true,
		"schedule": ["before 6am on monday"],
		"automerge": true,
		"platformAutomerge": true
	},
	"packageRules": [
		{
			"description": "Do not automerge major updates",
			"matchUpdateTypes": ["major"],
			"addLabels": ["dependencies:major"],
			"automerge": false
		},
		{
			"description": "Do not automerge peer dependency changes (library API compatibility)",
			"matchDepTypes": ["peerDependencies"],
			"automerge": false
		},
		{
			"description": "Automerge non-major dev dependency updates",
			"matchDepTypes": ["devDependencies"],
			"matchUpdateTypes": ["minor", "patch"],
			"groupName": "devDependencies (non-major)",
			"automerge": true,
			"platformAutomerge": true
		},
		{
			"description": "Group & automerge GitHub Actions digest updates",
			"matchManagers": ["github-actions"],
			"matchUpdateTypes": ["digest"],
			"groupName": "github-actions",
			"automerge": true,
			"platformAutomerge": true
		},
		{
			"description": "Keep Node.js version updates manual (major runtime change)",
			"matchPackageNames": ["node"],
			"matchManagers": ["github-actions"],
			"automerge": false,
			"separateMajorMinor": true
		},
		{
			"description": "Group docs-site dependency updates",
			"matchFileNames": ["apps/docs/**"],
			"matchUpdateTypes": ["minor", "patch"],
			"groupName": "docs (non-major)",
			"automerge": true,
			"platformAutomerge": true
		},
		{
			"description": "Group core package testing tool updates",
			"matchFileNames": ["packages/core/**"],
			"matchUpdateTypes": ["minor", "patch"],
			"groupName": "core testing (non-major)",
			"automerge": true,
			"platformAutomerge": true,
			"matchPackageNames": [
				"/^vitest$/",
				"/^@vitest//",
				"/^@testcontainers//",
				"/^@faker-js//",
				"/^fishery$/"
			]
		}
	]
}
