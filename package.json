{
	"name": "monque",
	"private": true,
	"type": "module",
	"packageManager": "bun@1.3.5",
	"engines": {
		"node": ">=22.21.1"
	},
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"prepare": "lefthook install",
		"build": "turbo build",
		"type-check": "turbo type-check",
		"test": "turbo test",
		"test:dev": "turbo test:dev",
		"test:core": "turbo test --filter=@monque/core",
		"test:tsed": "turbo test --filter=@monque/tsed",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"lint": "turbo lint",
		"clean": "turbo clean && rimraf coverage .turbo",
		"clean:core": "turbo clean --filter=@monque/core",
		"clean:tsed": "turbo clean --filter=@monque/tsed",
		"clean:docs": "turbo clean --filter=@monque/docs",
		"reset": "rimraf node_modules **/node_modules dist **/dist coverage **/coverage .turbo **/.turbo",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"check": "biome check --write .",
		"check:exports": "turbo check:exports",
		"check:unused": "knip"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.18.2",
		"@biomejs/biome": "^2.3.10",
		"@changesets/cli": "^2.29.8",
		"@types/bun": "^1.3.5",
		"@vitest/coverage-v8": "^4.0.16",
		"@vitest/ui": "^4.0.16",
		"knip": "^5.76.0",
		"lefthook": "^2.0.12",
		"publint": "^0.3.16",
		"rimraf": "^6.1.2",
		"turbo": "^2.7.0",
		"vitest": "^4.0.16"
	},
	"peerDependencies": {
		"typescript": "^5"
	}
}
