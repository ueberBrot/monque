{
	"name": "monque",
	"private": true,
	"type": "module",
	"packageManager": "bun@1.3.5",
	"engines": {
		"node": ">=22.21.1"
	},
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"prepare": "lefthook install",
		"build": "turbo build",
		"type-check": "turbo type-check",
		"test": "turbo test",
		"test:unit": "turbo test:unit",
		"test:integration": "turbo test:integration",
		"test:dev": "turbo test:dev",
		"lint": "turbo lint",
		"clean": "turbo clean && rimraf coverage .turbo",
		"clean:core": "turbo clean --filter=@monque/core",
		"clean:docs": "turbo clean --filter=@monque/docs",
		"dev:docs": "turbo dev --filter=@monque/docs",
		"build:docs": "turbo build --filter=@monque/docs",
		"preview:docs": "turbo preview --filter=@monque/docs",
		"reset": "rimraf --glob '**/node_modules' '**/dist' '**/coverage' '**/.turbo' '**/.astro'",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"check": "biome check --write .",
		"check:exports": "turbo check:exports",
		"check:unused": "knip",
		"repomix": "repomix",
		"changeset": "changeset",
		"release": "changeset publish"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"@changesets/changelog-github": "^0.5.2",
		"@changesets/cli": "^2.29.8",
		"@types/bun": "^1.3.5",
		"@vitest/coverage-v8": "^4.0.16",
		"knip": "^5.76.0",
		"lefthook": "^2.0.12",
		"repomix": "^1.11.0",
		"rimraf": "^6.1.2",
		"turbo": "^2.7.0",
		"typescript": "^5.7.3",
		"vitest": "^4.0.16"
	}
}
