{
	"name": "monque",
	"private": true,
	"type": "module",
	"packageManager": "bun@1.3.5",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "turbo build",
		"test": "turbo test",
		"test:dev": "turbo test:dev",
		"test:core": "turbo test --filter=@monque/core",
		"test:tsed": "turbo test --filter=@monque/tsed",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"lint": "turbo lint",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"check": "biome check --write ."
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.9",
		"@changesets/cli": "^2.29.8",
		"@types/bun": "^1.3.4",
		"@vitest/coverage-v8": "^4.0.16",
		"@vitest/ui": "^4.0.16",
		"turbo": "^2.6.3",
		"vitest": "^4.0.16"
	},
	"peerDependencies": {
		"typescript": "^5"
	}
}
